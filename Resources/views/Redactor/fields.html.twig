{% block redactor_widget %}
    {% spaceless %}
        <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
        <script type="text/javascript">
            if (typeof configRedactor == 'undefined') {
                var configRedactor = {};
            }
            configRedactor['{{ id }}'] = {{ redactor_config|json_encode|raw }};
        </script>
    {% endspaceless %}
{% endblock redactor_widget %}
